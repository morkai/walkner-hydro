<div class="controls alarms-form-action alarms-form-action-message">
  <input type="hidden" name="<%- fieldNamePrefix %>.type" value="<%- actionType %>">
  <input class="alarms-form-action-severity" type="hidden" name="<%- fieldNamePrefix %>.severity" value="warning">
  <h5><%- t('alarms', 'ACTION_MESSAGE_HEADER:'+actionType) %></h5>
  <%- t('alarms', 'ACTION_MESSAGE_DELAY') %>
  <div class="input-append">
    <input class="alarms-form-action-delay" name="<%- fieldNamePrefix %>.delay" type="number" min="0" max="3600" step="0.1">
    <span class="add-on">s</span>
  </div>
  <%- t('alarms', 'ACTION_MESSAGE_TEXT') %>
  <textarea class="span6 alarms-form-action-text" name="<%- fieldNamePrefix %>.parameters.text"></textarea>
  <%- t('alarms', 'ACTION_MESSAGE_USERS') %>
  <ul class="alarms-form-action-users-list"></ul>
  <input class="span6 alarms-form-action-users-input" type="text">
</div>
